<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ex.admin.databclass.MainActivity">
    <Button
        android:onClick="onClickRegistr"
        android:layout_alignParentRight="true"
        android:text="Registr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/texntNameId"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:hint="enter you name" />

    <EditText
        android:id="@+id/textPasswordId"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/texntNameId"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:hint="enter you pass" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:onClick="onCLickStart"
        android:text="START" />
</RelativeLayout>
