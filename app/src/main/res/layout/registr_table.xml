<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/nameTableReg"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:gravity="center"
        android:hint="name" />

    <EditText
        android:id="@+id/nickTableReg"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/nameTableReg"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:hint="nickname" />

    <EditText
        android:id="@+id/passTableReg"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/nickTableReg"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:hint="password" />
    <Button
        android:onClick="onClickAddPerson"
        android:text="Registr"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>